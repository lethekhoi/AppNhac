<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/txtTitlePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/listviewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitlePlaylist">


    </ListView>

    <TextView
        android:text="Xem thêm Playlist"
        android:id="@+id/txtmoreplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewPlaylist"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#c9c7c7"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#0a0a0a"
        android:textSize="19sp" />


</RelativeLayout>